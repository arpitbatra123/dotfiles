# aliases
alias ll='ls -l'
# edit the zsh shell config
alias ez='code ~/Documents/dotfiles'
# load the shell config
alias sz='source ~/.zshrc'
alias vi='nvim'
alias startdb='brew services start redis; brew services start mysql@5.7'
alias stopdb='brew services stop redis; brew services stop mysql@5.7'
alias python='python3'
alias ytd='youtube-dl'
alias git='hub'
# dump installed packages to brew file
alias brewdump='brew bundle dump --force'
# open VSCode even faster
alias c.='code .'

# git aliases
alias gco='git checkout'
alias gp='git pull'
alias gs='git status -sb'
alias gst='git stash'
alias gsa='git stash apply'

# node aliases
alias nr='npm run'
alias ncu='npx npm-check-updates -u' 

# project specific aliases
alias supdash='cd ~/Documents/postman-support-dashboard; fnm use; concurrently "node app.js" "npm run webpack-dev"'
alias onb='cd ~/Documents/postman-onboarding-ui; rm -rf assets/js/ fnm use; concurrently "node app.js" "npm run webpack-dev"'
alias art='cd ~/Documents/postman-app; yarn start --target browser'
alias artopen='cd ~/Documents/postman-app; yarn open --target browser'

alias python='python3'
alias pip='pip3'